# Copy this file to terraform.tfvars and customize your values

# Basic Configuration
aws_region = "ap-south-1"          # Asia Pacific (Mumbai) - Great for Indian players!
instance_type = "m7i-flex.large"   # FREE TIER ELIGIBLE! 2 vCPUs, 8GB RAM - Perfect for friends server!
volume_size = 30                   # Max free tier storage
environment = "prod"

# SSH Configuration
public_key_path = "~/.ssh/id_rsa.pub"

# Minecraft Server Configuration
minecraft_version = "1.20.4"
server_name = "My Production Minecraft Server"
max_players = 10
difficulty = "normal"       # peaceful, easy, normal, hard

# Security Configuration (IMPORTANT: Restrict these for production)
allowed_ssh_cidr = ["0.0.0.0/0"]        # Change to your IP: ["YOUR.IP.ADDRESS/32"]
minecraft_allowed_cidr = ["0.0.0.0/0"]  # Restrict if needed

# Monitoring and Backup Configuration
enable_monitoring = true
backup_retention_days = 30